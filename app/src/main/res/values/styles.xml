<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/quicksand_fonts_family</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/heading2</item>
    </style>

    <style name="AppTheme.TextView.Subtitle" parent="AppTheme.TextView">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="AppTheme.TextView.Link" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme">
        <item name="android:textSize">@dimen/heading5</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <style name="AppTheme.EditText.Label" parent="AppTheme">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">@dimen/heading4</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/heading4</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme.Button.Facebook" parent="AppTheme.Button">
        <item name="android:background">@drawable/button_facebook</item>
    </style>

    <style name="AppTheme.Button.Google" parent="AppTheme.Button">
        <item name="android:background">@drawable/button_google</item>
    </style>

    <style name="AppTheme.Calendar.Day" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="AppTheme.Calendar.DayNumber" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
